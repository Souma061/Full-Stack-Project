# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Connection URL
# Local: mongodb://localhost:27017/your-database-name
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/database-name
MONGODB_URI=mongodb://localhost:27017/fullstack-app

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# These should be different for each environment and NEVER shared publicly

# Secret for access tokens (expires in 1 day)
ACCESS_TOKEN_SECRET=your-super-secret-access-token-minimum-32-characters-long

# Secret for refresh tokens (expires in 10 days)
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-minimum-32-characters-long

# Token expiry times
ACCESS_TOKEN_EXPIRY=1d
REFRESH_TOKEN_EXPIRY=10d

# =============================================================================
# CLOUDINARY CONFIGURATION (FILE UPLOAD)
# =============================================================================

# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (Railway/Heroku will set this automatically)
PORT=8000

# CORS origins (comma-separated for multiple origins)
# Development: http://localhost:3000
# Production: https://yourdomain.com,https://www.yourdomain.com
# Allow all: *
CORS_ORIGIN=http://localhost:3000

# Environment (development, production, test)
NODE_ENV=development

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================

# SMTP settings for sending emails (notifications, password reset, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# =============================================================================
# LOGGING CONFIGURATION (OPTIONAL)
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/disable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# RATE LIMITING CONFIGURATION (OPTIONAL)
# =============================================================================

# Rate limit: requests per time window
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# FILE UPLOAD LIMITS (OPTIONAL)
# =============================================================================

# Maximum file sizes in bytes
MAX_IMAGE_SIZE=5242880
MAX_VIDEO_SIZE=104857600

# =============================================================================
# SECURITY CONFIGURATION (OPTIONAL)
# =============================================================================

# Session secret for additional security
SESSION_SECRET=your-session-secret-here

# Cookie settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS (OPTIONAL)
# =============================================================================

# Redis URL for caching (if using Redis)
# REDIS_URL=redis://localhost:6379

# Sentry DSN for error tracking (if using Sentry)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics or other analytics service
# ANALYTICS_ID=your-analytics-id

# =============================================================================
# DEPLOYMENT SPECIFIC (SET BY PLATFORM)
# =============================================================================

# These are typically set automatically by deployment platforms
# Don't modify these unless you know what you're doing

# Railway sets these automatically
# RAILWAY_PROJECT_ID=
# RAILWAY_ENVIRONMENT=

# Heroku sets these automatically
# HEROKU_APP_NAME=
# HEROKU_SLUG_COMMIT=

# Vercel sets these automatically
# VERCEL_URL=
# VERCEL_ENV=

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable debug mode (more verbose logging)
DEBUG=true

# Mock external services in development
MOCK_CLOUDINARY=false
MOCK_EMAIL=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database (different from development/production)
TEST_MONGODB_URI=mongodb://localhost:27017/fullstack-test

# Disable external services during testing
DISABLE_AUTH_MIDDLEWARE=false
DISABLE_RATE_LIMITING=false
