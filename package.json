{
  "name": "full-stack",
  "version": "1.0.0",
  "description": "a backend project",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "build": "npm install",
    "dev": "node ./node_modules/nodemon/bin/nodemon.js --exec \"node -r dotenv/config\" src/index.js",
  "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
  "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
  "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
  "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=unit",
  "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=integration",
  "test:debug": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "javascript",
    "backend"
  ],
  "author": "Soumabrata Ghosh",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.1.3",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "mongoose-aggregate-paginate-v2": "^1.1.4",
    "multer": "^2.0.2",
    "zod": "^3.25.76"
  }
}
